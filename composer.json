{
  "name": "paket/fram",
  "description": "Minimal view framework",
  "homepage": "https://github.com/paketphp",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "ext-pdo": "*",
    "nikic/fast-route": "^1.3",
    "paket/bero": "^0.1.0",
    "phpunit/phpunit": "^8"
  },
  "suggest": {
    "paket/bero": "For BeroViewFactory",
    "nikic/fast-route": "For FastRouteRouter"
  },
  "autoload": {
    "psr-4": {
      "Paket\\Fram\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Paket\\Fram\\": "tests/",
      "Paket\\Fram\\Examples\\": "examples/src/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "coverage": "phpdbg -qrr vendor/phpunit/phpunit/phpunit --coverage-text --colors=never",
    "coverage-html": [
      "Paket\\Fram\\Helper\\Shell::deleteCoverage",
      "phpdbg -qrr vendor/phpunit/phpunit/phpunit --coverage-html coverage"]
  }
}
